{% extends 'base.html.twig' %}


{% block body %}
    <div class="block push">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="jumbotron jumbotron-fluid">
                        <h1>Utilisateur sélectionné :</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center" style="margin-bottom: 25px;">
                    {% if user.image %}
                        <img
                                src="{{ asset(user.image.webPath) }}"
                                alt="{{ user.image.alt }}"
                                width="150px"
                                height="150px"
                                class="img-responsive img-circle"
                        />
                    {% else %}
                        <td>Aucun avatar</td>
                    {% endif %}

                </div>

                <table class="table table-hover table-responsive-sm">
                    <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Email</th>
                        <th>Inscrit depuis</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.confirmedAt|date("d/m/Y") }}</td>
                        <td>{{ include('user/_delete_form.html.twig') }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('gestionDesUsers') }}"><button class="btn btn-info">Revenir à la liste des utilisateurs</button></a>
            </div>
        </div>
    </div>


{% endblock %}
<form method="post" action="{{ path('marque_delete', {'id': marque.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer cette marque ? (Ceci supprimera toutes les motos liées à cette marque)');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
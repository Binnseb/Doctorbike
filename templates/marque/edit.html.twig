{% extends 'base.html.twig' %}

{% block body %}

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} text-center">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="block push">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="jumbotron jumbotron-fluid">
                        <h1>Edition d'une marque</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card bg-dark text-primary">
                        <div class="card-header" style="text-align: center">
                            <h4>Veuillez remplir ce formulaire pour modifier la marque</h4>
                        </div>
                        <div class="card-body">
                            <div style="text-align: center">
                            {% if marque.image %}
                                <img
                                        src="{{ asset(marque.image.webPath) }}"
                                        alt="{{ marque.image.alt }}"
                                        width="50px"
                                        height="50px"
                                        class="img-responsive img-circle"
                                />
                            {% endif %}
                            </div>
                            {{ include('marque/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}

                            <br>
                            <a href="{{ path('marque_index') }}" class="btn btn-info">Revenir Ã  la liste des marques</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
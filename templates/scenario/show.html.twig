{% extends 'base.html.twig' %}

{% block body %}

    <div class="block push">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="jumbotron jumbotron-fluid">
                        <h1>Scenario sélectionnée : </h1>
                        <p>{{ scenario.nom }}</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <table class="table table-hover table-responsive-sm">
                    <tbody>
                    <tr>
                        <th>Auteur</th>
                        <th>Nom</th>
                        <th>Nombre de questions</th>
                        <th>Taux de satisfaction</th>
                        <th></th>
                    </tr>

                    <tr>
                        <td>{{ scenario.user.username }}</td>
                        <td>{{ scenario.nom }}</td>
                        <th>{{ scenario.questionReponses.count }}</th>
                        <th></th>
                        <td>{{ include('scenario/_delete_form.html.twig') }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('scenario_list') }}"><button class="btn btn-info">Revenir à la liste des scénarios</button></a>
            </div>
        </div>
    </div>

{% endblock %}
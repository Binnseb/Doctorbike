{% extends 'base.html.twig' %}

{% block body %}

    <div class="block push">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="jumbotron jumbotron-fluid">
                        <h1>Modèle sélectionné</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <table class="table text-center table-hover">
                    <tbody>
                        <tr>
                            <th>Nom du modèle</th>
                            <th>Marque associée</th>
                            <th>Logo</th>
                            <th></th>
                        </tr>

                        <tr>
                            <td>{{ modele.nom }}</td>
                            <td>{{ modele.marque.nom }}</td>
                            {% if modele.marque.image %}
                                <td>
                                    <img
                                            src="{{ asset(modele.marque.image.webPath) }}"
                                            alt="{{ modele.marque.image.alt }}"
                                            width="50px"
                                            height="50px"
                                            class="img-responsive img-circle"
                                    />
                                </td>
                            {% else %}
                                <td>Pas de logo</td>
                            {% endif %}
                            <th>{{ include('modele/_delete_form.html.twig') }}</th>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('modele_index') }}" class="btn btn-info">Revenir à la liste des modèles</a>
            </div>



{% endblock %}
{% extends 'base.html.twig' %}


{% block body %}
    <div class="block push">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="jumbotron jumbotron-fluid">
                        <h1>Moto sélectionnée :</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <table class="table table-hover table-responsive-sm">
                    <thead>
                    <tr>
                        <th>Marque</th>
                        <th>Modele</th>
                        <th>Cylindree</th>
                        <th>Annee</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ moto.Modele.Marque.Nom }}</td>
                        <td>{{ moto.Modele.Nom }}</td>
                        <td>{{ moto.Modele.Cylindree.Valeur }}</td>
                        <td>{{ moto.Annee }}</td>
                        <td>{{ include('moto/_delete_form.html.twig') }}</td>
                    </tr>
                    </tbody>
                </table>
                <a href="{{ path('moto_list') }}"><button class="btn btn-info">Revenir à la liste des motos</button></a>
            </div>
        </div>
    </div>


{% endblock %}